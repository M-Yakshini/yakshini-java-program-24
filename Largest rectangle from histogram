class Solution {
    public int largestRectangleArea(int[] h) {
        Stack<Integer> s = new Stack<>();
        int max = 0;
        for (int i = 0; i <= h.length; i++) {
            int cur = i == h.length ? 0 : h[i];
            while (!s.isEmpty() && cur < h[s.peek()]) {
                int ht = h[s.pop()];
                int w = s.isEmpty() ? i : i - s.peek() - 1;
                max = Math.max(max, ht * w);
            }
            s.push(i);
        }
        return max;
    }
}
