class Solution {
    public ListNode rotateRight(ListNode head, int k) {
        if (head == null || head.next == null || k == 0) return head;
        ListNode c = head;
        int len = 1;
        while (c.next != null) {
            c = c.next;
            len++;
        }
        c.next = head;
        k %= len;
        for (int i = 0; i < len - k; i++) c = c.next;
        ListNode r = c.next;
        c.next = null;
        return r;
    }
}
